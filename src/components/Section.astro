---
const { name, textClass, colorClass, top = 0, bottom = 0 } = Astro.props;
---

<div class="relative" style={{ marginTop: `${top}px` }}>
  <div class:list={[colorClass, "absolute inset-0"]} style={{ top: `${-top}px` }}></div>
  <div class="max-w-sm sm:max-w-screen-md mx-auto p-4">
    <div
      class:list={[
        "tracking-wider text-white font-serif text-center sm:text-left",
        { "text-6xl": name.length < 20, "text-5xl": name.length >= 20 },
      ]}
      style={{ textShadow: "0 1px 0 #0002" }}
    >
      <span class:list={[textClass, "inline-block"]}>{name}</span>
    </div>
  </div>
  <!--  bg-gradient-to-b from-white/0 to-white/30 bg-no-repeat bg-top bg-[100%_100px]  -->
  <div class="text-xl text-black/60 relative mt-4" style={{ paddingBottom: `${bottom}px` }}>
    <!-- <div class=" h-20 -mb-20"></div> -->
    <div class="max-w-sm sm:max-w-screen-md mx-auto p-4 rounded-md bg-white">
      <slot />
    </div>
  </div>
</div>
