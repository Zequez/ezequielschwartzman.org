---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Availability for team meetings" noPadding={true}>
  <div class="pt-24 sm:pt-28 flex flex-col h-screen">
    <h1 class="font-serif text-lg sm:text-2xl text-center mb-0">Time availability</h1>
    <p class="text-center mb-4 opacity-50">Time shown in viewer timezone</p>
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/jstimezonedetect/1.0.7/jstz.js"
    ></script>

    <iframe id="calendar" class="w-full h-full" src="" scrolling="no"></iframe>

    <script>
      const timezone = jstz.determine();
      const src =
        "https://calendar.google.com/calendar/embed?height=600&wkst=2&bgcolor=%23ffffff&mode=WEEK&showTabs=0&showCalendars=0&showDate=1&showPrint=0&showNav=1&showTitle=0&src=ZWE3YmFjMTViZGZiNmIxNjVjOTk3ZDgxNDIyMWI3MTJjNTgzNmJkMjM5OTNlYmFlMzFkZjMxMzJjODliYzYyMEBncm91cC5jYWxlbmRhci5nb29nbGUuY29t&color=%23009688&ctz=";
      document.getElementById("calendar").setAttribute("src", src + timezone.name());
    </script>
  </div>
</Layout>
