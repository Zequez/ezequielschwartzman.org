---
import Layout from "../layouts/Layout.astro";
import { Content as About } from "./_about.md";
---

<Layout>
  <div class="mx-auto p-0 md:p-8 md:flex">
    <div
      class="aspect-square overflow-hidden md-(w-1/2 max-w-2xl mr-8 aspect-auto overflow-auto mx-0 rounded-md flex items-center)"
    >
      <img
        src="/assets/my-photo-1.jpg"
        alt="A picture of myself in the woods"
        class="md:rounded-md shadow-sm -mt-52 md:mt-0"
      />
    </div>
    <div class="p-4 md:p-0 md:w-1/2 markdown">
      <About />
    </div>
  </div>
</Layout>
